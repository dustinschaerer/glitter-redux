<!DOCTYPE html>
<html>
<head>
  <title>Glitter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class="nav-wrapper brown">
      <a href="/" class="brand-logo">Rails & Redux</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="#">Some Link</a></li>
        <li><a href="#">Some Link</a></li>
      </ul>
    </div>
  </nav>


  <div class="right-align">
    <br>
    <% if user_signed_in? %>
      Welcome <%= link_to current_user.display_name, "/profile" %>,
      <%= link_to "Logout", destroy_user_session_path, method: 'DELETE' %>
    <% else %>
      Please <%= link_to "login", new_user_session_path -%> or <%= link_to "sign up", new_user_registration_path  -%>
    <% end %>
    <br>
  </div>

  <div className="container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>

  <%= yield %>

</body>
</html>
